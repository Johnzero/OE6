<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_fg_sales_by_partner_graph" model="ir.ui.view">
         <field name="name">fg_sale.order.report.source.bar</field>
         <field name="model">fg_sale.order.report</field>
         <field name="type">graph</field>
         <field name="arch" type="xml">
             <graph string="客户销售统计" type="bar">
                 <field name="source"/>
                 <field name="subtotal_amount" operator="+"/>
             </graph>
         </field>
    </record>
    
    <record id="action_fg_sale_report_partner" model="ir.actions.act_window">
            <field name="name">事业部销售统计</field>
            <field name="res_model">fg_sale.order.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree</field>
            <field name="domain">[('date','&lt;=', time.strftime('%Y-%m-%d')),('date','&gt;',(datetime.date.today()-datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]</field>
            <field name="view_id" ref="view_fg_sales_by_partner_graph"/>
            <field name="context">{'search_default_Customer':1}</field>
        </record>
    
    

</data>
</openerp>