<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_fg_sale_report_order_export_wizard" model="ir.ui.view">
            <field name="name">导出订单明细</field>
            <field name="model">fg_sale.order.export.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form string="导出订单明细">
                 <group states="choose">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="source"/>
                    <field invisible="1" name="state"/>
                </group>
                <group states="get">
                    <separator string="导出完成, 点击'另存为'下载统计表." colspan="4"/>
                    <field name="name" invisible="1"/>
                    <field name="data" nolabel="1" readonly="1" filename="name" />
                </group>
                    <group colspan="4" col="6" states="choose">
                        <button  icon="gtk-close" special="cancel" string="关闭"/>
                        <button icon="gtk-ok" name="export_excel" string="导出订单" type="object"/>
                    </group>
                    <group colspan="8" col="8" states="get">
                        <separator string="" colspan="8"/>
                        <label colspan="7" width="220"/>
                        <button icon="gtk-close" name="button_cancel" special="cancel" string="关闭" type="object"/>
                    </group>
            </form>
            </field>
        </record>
        
        <record id="view_fg_sale_report_export_wizard" model="ir.ui.view">
            <field name="name">导出单品统计</field>
            <field name="model">fg_sale.product.export.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form string="导出统计表">
                 <group states="choose">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field invisible="1" name="state"/>
                </group>
                <group states="get">
                    <separator string="统计完成, 点击'另存为'下载统计表." colspan="4"/>
                    <field name="name" invisible="1"/>
                    <field name="data" nolabel="1" readonly="1" filename="name" />
                </group>
                    <group colspan="4" col="6" states="choose">
                        <button  icon="gtk-close" special="cancel" string="关闭"/>
                        <button icon="gtk-ok" name="export_excel" string="导出报表" type="object"/>
                    </group>
                    <group colspan="8" col="8" states="get">
                        <separator string="" colspan="8"/>
                        <label colspan="7" width="220"/>
                        <button icon="gtk-close" name="button_cancel" special="cancel" string="关闭" type="object"/>
                    </group>
            </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="fg_sale_amount_resource_wizard_form_view">
            <field name="name">fg_sale.amount.source.wizard.form</field>
            <field name="model">fg_sale.amount.source.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="事业部销量统计">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <group colspan="4" col="6">
                        <button  icon="gtk-close" special="cancel" string="关闭"/>
                        <button icon="gtk-ok" name="show_result" string="生成" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_fg_sale_resource_wizard">
            <field name="name">事业部销量统计</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fg_sale.amount.source.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fg_sale_amount_resource_wizard_form_view"/>
            <field name="target">new</field>
        </record>
        
        
        <record id="action_fg_sale_report_order_export_wizard" model="ir.actions.act_window">
            <field name="name">导出订单明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fg_sale.order.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_fg_sale_report_order_export_wizard"/>
            <field name="target">new</field>
        </record>

        <record id="action_fg_sale_report_export_wizard" model="ir.actions.act_window">
            <field name="name">导出单品统计</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fg_sale.product.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_fg_sale_report_export_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>