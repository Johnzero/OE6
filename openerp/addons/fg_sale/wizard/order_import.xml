<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_fg_sale_order_wizard_import" model="ir.ui.view">
            <field name="name">Order Import</field>
            <field name="model">fg_sale.order.wizard_import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form string="说明">
                    <group colspan="4" col="6">
                        <button  icon="gtk-close" special="cancel" string="关闭"/>
                        <button icon="gtk-ok" name="import_order" string="导入订单" type="object"/>
                        <button icon="gtk-ok" name="import_order_line" string="导入明细" type="object"/>
                    </group>
            </form>
            </field>
        </record>

        <record id="action_fg_sale_order_wizard_import" model="ir.actions.act_window">
            <field name="name">导入订单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fg_sale.order.wizard_import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_fg_sale_order_wizard_import"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>